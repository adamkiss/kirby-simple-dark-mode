# This file is for unifying the coding style for different editors and IDEs
# Bastian is just so wrong with the spaces
# editorconfig.org

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2
indent_style = space
